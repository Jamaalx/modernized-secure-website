# Production Environment Configuration
# Secure Documents Platform - mindthematrix.org

# Application Environment
NODE_ENV=production
LOG_LEVEL=info
PORT=3001

# Domain Configuration
FRONTEND_URL=https://mindthematrix.org
BACKEND_URL=https://api.mindthematrix.org
DOMAIN=mindthematrix.org

# Database Configuration (Railway will inject these)
DATABASE_URL=${{Railway.DATABASE_URL}}
REDIS_URL=${{Railway.REDIS_URL}}

# Database Pool Configuration
DB_POOL_MAX=20
DB_POOL_MIN=5
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=5000

# JWT Configuration
JWT_SECRET=${{Railway.JWT_SECRET}}
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_SECRET=${{Railway.REFRESH_TOKEN_SECRET}}

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=${{Railway.SESSION_SECRET}}

# CORS Configuration
CORS_ORIGINS=https://mindthematrix.org,https://www.mindthematrix.org

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_PATH=/app/uploads

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (Resend)
RESEND_API_KEY=re_XFJZ5Q1K_8t54PSY96y9zGK8wKe8UNnji
EMAIL_FROM=noreply@mindthematrix.org
SMTP_HOST=smtp.resend.com
SMTP_PORT=587
SMTP_USER=resend
SMTP_PASS=re_XFJZ5Q1K_8t54PSY96y9zGK8wKe8UNnji

# Security Headers
HSTS_MAX_AGE=31536000
CSP_REPORT_URI=https://mindthematrix.org/csp-report

# Monitoring and Logging
DEBUG_SQL=false
ENABLE_REQUEST_LOGGING=true
ENABLE_MONITORING=true
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_INTERVAL=30000

# Frontend Configuration
VITE_API_URL=https://api.mindthematrix.org
VITE_APP_NAME=Mind The Matrix
VITE_APP_VERSION=2.0.0
VITE_ENABLE_PWA=true
VITE_DOMAIN=mindthematrix.org

# Performance Configuration
ENABLE_COMPRESSION=true
ENABLE_CACHING=true
CACHE_TTL=3600

# Feature Flags
ENABLE_DOCUMENT_VERSIONING=true
ENABLE_DOCUMENT_SHARING=true
ENABLE_AUDIT_LOGGING=true
ENABLE_TWO_FACTOR_AUTH=true

# Compliance
GDPR_COMPLIANCE=true
SOC2_COMPLIANCE=true

# CloudFlare Integration
CLOUDFLARE_ZONE_ID=${{Railway.CLOUDFLARE_ZONE_ID}}
CLOUDFLARE_API_TOKEN=${{Railway.CLOUDFLARE_API_TOKEN}}

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# API Configuration
API_VERSION=v1
API_PREFIX=/api
API_RATE_LIMIT_PER_MINUTE=60
API_RATE_LIMIT_PER_HOUR=1000

# Session Configuration
SESSION_TIMEOUT=1800
SESSION_CLEANUP_INTERVAL=300

# File Processing
MAX_CONCURRENT_UPLOADS=5
DOCUMENT_PROCESSING_TIMEOUT=300
THUMBNAIL_GENERATION=true

# Notification Configuration
EMAIL_NOTIFICATION_ENABLED=true
PUSH_NOTIFICATION_ENABLED=false

