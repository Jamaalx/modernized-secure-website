# Environment Configuration for Secure Documents Platform
# Copy this file to .env and update the values

# Server Configuration
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=secure_docs
DB_USER=postgres
DB_PASSWORD=admin
DB_SSL=false

# JWT Configuration
JWT_SECRET=b4e2c7a1d9f8e3b6c5a2d1e0f9c8b7a6d5e4f3c2b1a0d9e8f7c6b5a4d3e2f1c0
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_SECRET=7a8b9c0d1e2f3g4h5i6j7k8l9m0n1o2p3q4r5s6t7u8v9w0x1y2z3a4b5

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=50MB
ALLOWED_MIME_TYPES=application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=f1e2d3c4b5a6f7e8d9c0b1a2f3e4d5c6b7a8f9e0d1c2b3a4f5e6d7c8b9a0
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring & Logging
LOG_LEVEL=info
AUDIT_LOG_RETENTION_DAYS=365
SECURITY_LOG_RETENTION_DAYS=1095

# Email Configuration (for invitations)
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_USER=your-email@domain.com
SMTP_PASS=your-email-password
SMTP_FROM=noreply@your-domain.com

# External Services (optional)
GEOIP_API_KEY=your-geoip-api-key
VIRUS_SCAN_API_KEY=your-virus-scan-api-key

# Development/Debug Settings
DEBUG_SQL=false
ENABLE_CORS=true
TRUST_PROXY=false