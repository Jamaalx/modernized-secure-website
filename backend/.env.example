# Environment Configuration - Secure Documents Backend
# Copy this file to .env and update with your actual values

# Application Environment
NODE_ENV=development
PORT=3001
LOG_LEVEL=info

# Database Configuration
# Option 1: Use DATABASE_URL (recommended for production)
DATABASE_URL=postgresql://username:password@localhost:5432/secure_docs

# Option 2: Use individual database parameters
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=secure_docs
# DB_USER=postgres
# DB_PASSWORD=your_password
# DB_SSL=false

# Database Pool Configuration
DB_POOL_MAX=20
DB_POOL_MIN=2
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=5000
DB_ACQUIRE_TIMEOUT=60000

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-minimum-32-characters
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_SECRET=your-super-secure-refresh-token-secret-key

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your-super-secure-session-secret-key-minimum-32-characters

# CORS Configuration
FRONTEND_URL=http://localhost:3000
# For multiple origins, use comma-separated values:
# CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_PATH=./uploads

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@yourdomain.com

# AWS S3 Configuration (Optional - for file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# Redis Configuration (Optional - for session storage)
REDIS_URL=redis://localhost:6379

# Monitoring and Logging
DEBUG_SQL=false
ENABLE_REQUEST_LOGGING=true

# Test Environment (for running tests)
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/secure_docs_test

# Production Security Headers
HSTS_MAX_AGE=31536000
CSP_REPORT_URI=https://yourdomain.com/csp-report

# API Keys for External Services
VIRUS_SCAN_API_KEY=your-virus-scan-api-key
DOCUMENT_ANALYSIS_API_KEY=your-document-analysis-api-key

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_INTERVAL=30000

