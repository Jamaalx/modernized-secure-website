{
  "name": "secure-docs-backend",
  "version": "2.0.0",
  "description": "Secure document sharing platform backend - 2025 modernized",
  "main": "src/server.js",
  "type": "module",
  "engines": {
    "node": ">=20.19.0"
  },
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "migrate": "node database/migrate.js",
    "lint": "eslint src --ext .js,.ts",
    "lint:fix": "eslint src --ext .js,.ts --fix",
    "type-check": "tsc --noEmit",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix"
  },
  "dependencies": {
    "express": "^5.1.0",
    "cors": "^2.8.5",
    "helmet": "^8.0.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.12.0",
    "multer": "^2.0.2",
    "express-rate-limit": "^7.4.1",
    "express-validator": "^7.2.0",
    "dotenv": "^16.4.5",
    "uuid": "^10.0.0",
    "geoip-lite": "^1.4.10",
    "useragent": "^2.3.0",
    "express-slow-down": "^2.0.3",
    "express-mongo-sanitize": "^2.2.0",
    "validator": "^13.12.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "winston": "^3.14.2",
    "joi": "^17.13.3"
  },
  "devDependencies": {
    "nodemon": "^3.1.7",
    "vitest": "^2.1.2",
    "@vitest/ui": "^2.1.2",
    "@vitest/coverage-v8": "^2.1.2",
    "supertest": "^7.0.0",
    "eslint": "^9.12.0",
    "@eslint/js": "^9.12.0",
    "typescript": "^5.6.3",
    "@types/node": "^22.7.5",
    "@types/express": "^5.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/multer": "^1.4.12",
    "@types/uuid": "^10.0.0",
    "@types/validator": "^13.12.2",
    "@types/compression": "^1.7.5",
    "@types/morgan": "^1.9.9"
  },
  "keywords": [
    "secure",
    "documents",
    "sharing",
    "audit",
    "express",
    "nodejs",
    "typescript",
    "production-ready"
  ],
