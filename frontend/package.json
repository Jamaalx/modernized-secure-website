{
  "name": "secure-docs-frontend",
  "version": "2.0.0",
  "description": "Secure document sharing platform frontend - 2025 modernized",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20.19.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint src --ext .js,.jsx,.ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write src/**/*.{js,jsx,ts,tsx,css,md}",
    "format:check": "prettier --check src/**/*.{js,jsx,ts,tsx,css,md}",
    "analyze": "vite-bundle-analyzer",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix"
  },
  "dependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^6.28.0",
    "@tanstack/react-query": "^5.59.0",
    "axios": "^1.7.7",
    "react-hook-form": "^7.53.0",
    "@hookform/resolvers": "^3.9.0",
    "zod": "^3.23.8",
    "react-hot-toast": "^2.4.1",
    "lucide-react": "^0.451.0",
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.5.3",
    "date-fns": "^4.1.0",
    "file-saver": "^2.0.5",
    "react-dropzone": "^14.2.9",
    "recharts": "^2.12.7",
    "framer-motion": "^11.11.7",
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-dropdown-menu": "^2.1.2",
    "@radix-ui/react-toast": "^1.2.2",
    "@radix-ui/react-tooltip": "^1.1.3",
    "@radix-ui/react-select": "^2.1.2",
    "@radix-ui/react-checkbox": "^1.1.2",
    "@radix-ui/react-switch": "^1.1.1",
    "@radix-ui/react-tabs": "^1.1.1",
    "@radix-ui/react-progress": "^1.1.0",
    "react-helmet-async": "^2.0.5",
    "react-error-boundary": "^4.0.13",
    "use-debounce": "^10.0.4",
    "react-intersection-observer": "^9.13.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/file-saver": "^2.0.7",
    "@vitejs/plugin-react": "^4.3.3",
    "vite": "^6.0.1",
    "vite-bundle-analyzer": "^0.11.0",
    "vite-plugin-pwa": "^0.20.5",
    "tailwindcss": "^4.0.0",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.47",
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/typography": "^0.5.15",
    "vitest": "^2.1.2",
    "@vitest/ui": "^2.1.2",
    "@vitest/coverage-v8": "^2.1.2",
    "@testing-library/react": "^16.0.1",
    "@testing-library/jest-dom": "^6.6.2",
    "@testing-library/user-event": "^14.5.2",
    "jsdom": "^25.0.1",
    "eslint": "^9.12.0",
    "@eslint/js": "^9.12.0",
    "eslint-plugin-react": "^7.37.1",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.12",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "typescript": "^5.6.3",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10"
  },
  "keywords": [
    "react",
    "vite",
    "tailwindcss",
    "typescript",
    "secure",
    "documents",
    "frontend",
    "production-ready"
  ],
  "author": "Your Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/secure-docs-frontend"
  },
  "bugs": {
    "url": "https://github.com/your-org/secure-docs-frontend/issues"
  },
  "homepage": "https://github.com/your-org/secure-docs-frontend#readme",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,md}": [
      "prettier --write"
    ]
  }
}

